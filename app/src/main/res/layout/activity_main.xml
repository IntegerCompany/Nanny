<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/container_main"
        android:background="@color/pink_baby">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:id="@+id/imageView2"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/baby_sleeping_circle" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/ear_sleeping_button"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ear_with_shadow"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:visibility="visible" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imageButton"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ear_with_shadow"
            android:layout_alignParentBottom="false"
            android:layout_marginBottom="16dp"
            android:visibility="visible"
            android:layout_alignParentTop="true"
            android:layout_marginTop="16dp" />

        <Chronometer
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chronometer"
            android:layout_alignBottom="@+id/imageView2"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="33dp"
            android:textSize="36sp"
            android:textColor="#ff918383" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relativeLayout"
        android:background="@color/white" >

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imageButton2"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ear_with_shadow"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:visibility="visible" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imageButton3"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ear_with_shadow"
            android:layout_alignParentBottom="false"
            android:layout_marginBottom="16dp"
            android:visibility="visible"
            android:layout_alignParentTop="true"
            android:layout_marginTop="16dp" />

        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:id="@+id/imageView3"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/baby_crying_circle" />

    </RelativeLayout>

</RelativeLayout>
