<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.todo.nanny.LauncherActivity"
    android:orientation="vertical">


    <Button
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/btn_go_client"
        android:layout_gravity="center"
        android:background="@drawable/main_moms_button_selector"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/btn_go_server"
        android:layout_gravity="center"
        android:background="@drawable/main_baby_button_selector"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

</LinearLayout>
