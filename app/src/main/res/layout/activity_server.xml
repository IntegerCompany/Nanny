<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/container_server_main">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/baby_ask_with_text"
            android:id="@+id/view_show_id">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:scrollbars="vertical|horizontal">
                <TextView
                    android:id="@+id/textView1"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:textSize="20px"
                    />
            </ScrollView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Momy ip ?"
                android:id="@+id/tv_ip_address"
                android:layout_weight="2"
                android:text="192.168.1.217"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="130dp"
                android:textSize="28dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check Wifi"
                android:id="@+id/btnCheckWifiSettings"
                android:background="#fff6ffc7"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="130dp" />

        </RelativeLayout>
    </RelativeLayout>

    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/ok_main_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fab:fab_icon="@drawable/ic_ok"
        fab:fab_colorNormal="@color/white"
        fab:fab_colorPressed="@color/pink_pressed"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:elevation="1dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:id="@+id/btn_server_help"
        android:background="@drawable/abc_btn_rating_star_off_mtrl_alpha" />

</RelativeLayout>

